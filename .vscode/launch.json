{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Cardiac Monitor",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/Cardiac-Monitoring-System",
      "args": ["data/ecg_samples.bin"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      // "preLaunchTask": "Build Debug"
    }
  ]
}